<idea-plugin>
    <id>org.typedb.typeql.plugin.jetbrains</id>
    <name>TypeQL</name>
    <vendor email="community@typedb.org" url="https://typedb.org">typedb-osi</vendor>
    <description>TypeQL language support for JetBrains-based IDEs, targeting TypeDB 3.x</description>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="TypeQL"
                  implementationClass="org.typedb.typeql.plugin.jetbrains.TypeQLFileType"
                  fieldName="INSTANCE" language="TypeQL" extensions="tql;typeql"/>
        <lang.parserDefinition language="TypeQL"
                  implementationClass="org.typedb.typeql.plugin.jetbrains.TypeQLParserDefinition"/>
        <lang.syntaxHighlighterFactory language="TypeQL"
                  implementationClass="org.typedb.typeql.plugin.jetbrains.TypeQLSyntaxHighlighterFactory"/>
        <colorSettingsPage
                  implementation="org.typedb.typeql.plugin.jetbrains.TypeQLColorSettingsPage"/>
        <lang.braceMatcher language="TypeQL"
                  implementationClass="org.typedb.typeql.plugin.jetbrains.TypeQLBraceMatcher"/>
        <lang.commenter language="TypeQL"
                  implementationClass="org.typedb.typeql.plugin.jetbrains.TypeQLCommenter"/>
        <lang.foldingBuilder language="TypeQL"
                  implementationClass="org.typedb.typeql.plugin.jetbrains.TypeQLFoldingBuilder"/>
        <lang.psiStructureViewFactory language="TypeQL"
                  implementationClass="org.typedb.typeql.plugin.jetbrains.TypeQLStructureViewFactory"/>
        <lang.findUsagesProvider language="TypeQL"
                  implementationClass="org.typedb.typeql.plugin.jetbrains.TypeQLFindUsagesProvider"/>
        <lang.refactoringSupport language="TypeQL"
                  implementationClass="org.typedb.typeql.plugin.jetbrains.TypeQLRefactoringSupportProvider"/>
        <additionalTextAttributes scheme="Darcula" file="colorSchemes/DarculaTypeQL.icls"/>
        <additionalTextAttributes scheme="Dark" file="colorSchemes/DarkTypeQL.icls"/>
        <additionalTextAttributes scheme="Light" file="colorSchemes/LightTypeQL.icls"/>
        <additionalTextAttributes scheme="Default" file="colorSchemes/ClassicLightTypeQL.icls"/>
    </extensions>
</idea-plugin>
