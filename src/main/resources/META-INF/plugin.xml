<idea-plugin>
    <id>com.intellij.lang.typeql</id>
    <name>TypeQL</name>
    <vendor email="community@vaticle.com" url="https://vaticle.com">Vaticle</vendor>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="TypeQL" implementationClass="com.vaticle.typeql.jetbrains.TypeQLFileType" fieldName="INSTANCE"
                  language="TypeQL" extensions="tql"/>
        <fileTypeFactory implementation="com.vaticle.typeql.jetbrains.TypeQLFileTypeFactory"/>
        <lang.syntaxHighlighterFactory language="TypeQL"
                                       implementationClass="com.vaticle.typeql.jetbrains.highlighter.TypeQLSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="com.vaticle.typeql.jetbrains.highlighter.TypeQLColorSettingsPage"/>
        <lang.parserDefinition language="TypeQL"
                               implementationClass="com.vaticle.typeql.jetbrains.TypeQLParserDefinition"/>
        <psi.referenceContributor language="TypeQL"
                                  implementation="com.vaticle.typeql.jetbrains.reference.TypeQLReferenceContributor"/>
        <lang.findUsagesProvider language="TypeQL"
                                 implementationClass="com.vaticle.typeql.jetbrains.usage.TypeQLFindUsagesProvider"/>
        <lang.refactoringSupport language="TypeQL"
                                 implementationClass="com.vaticle.typeql.jetbrains.refactor.TypeQLRefactoringSupportProvider"/>
        <lang.namesValidator language="TypeQL"
                             implementationClass="com.vaticle.typeql.jetbrains.refactor.TypeQLNamesValidator"/>
        <completion.contributor language="TypeQL"
                                implementationClass="com.vaticle.typeql.jetbrains.completion.TypeQLCompletionContributor"/>
        <lang.commenter language="TypeQL" implementationClass="com.vaticle.typeql.jetbrains.refactor.TypeQLCommenter"/>

        <!-- inspections -->
        <inspectionToolProvider
                implementation="com.vaticle.typeql.jetbrains.inspection.unusedDeclaration.TypeQLUnusedDeclarationProvider"/>
        <inspectionToolProvider
                implementation="com.vaticle.typeql.jetbrains.inspection.undefinedDeclaration.TypeQLUndefinedDeclarationProvider"/>
        <inspectionToolProvider
                implementation="com.vaticle.typeql.jetbrains.inspection.duplicateDeclaration.TypeQLDuplicateDeclarationProvider"/>
        <inspectionToolProvider
                implementation="com.vaticle.typeql.jetbrains.inspection.unplayedRole.TypeQLUnplayedRoleProvider"/>
        <inspectionToolProvider
                implementation="com.vaticle.typeql.jetbrains.inspection.invalidTypeUsage.TypeQLInvalidTypeUsageProvider"/>
    </extensions>

</idea-plugin>
